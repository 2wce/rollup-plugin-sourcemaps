{
  "compilerOptions": {
    "target": "es2020",
    "declarationDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "esModuleInterop": true,
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
